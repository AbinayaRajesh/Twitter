<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBody"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_below="@+id/tvUserName"
        android:layout_marginLeft="5dp"
        android:autoLink="all"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ivReply"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/tvBody"
        android:onClick="reply"
        android:scaleType="fitXY"
        android:src="@drawable/ic_reply" />

    <ImageView
        android:id="@+id/reTweet"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/ivFavorite"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:onClick="reTweet"
        android:scaleType="fitXY"
        android:src="@drawable/ic_vector_retweet" />

    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/tvTimeStamp"
        android:layout_alignTop="@+id/ivReply"
        android:onClick="favorite"
        android:scaleType="fitXY"
        android:src="@drawable/ic_unfavorite" />

</RelativeLayout>